{
  "server": {
    "http": {
      "port": 8080,
      "connection": "ws"
    },
    "vfs": {
      "mounts": {
        "downloads": "/mnt/downloads"
      },
      "homes": "/home"
    }
  },
  "client": {
    "SettingsManager": {
      "CoreWM": {
        "useTouchMenu": true,
        "backgroundColor": "#089bd2",
        "fontFamily": "Ariel",
        "background": "image-fill",
        "icon": "outernet.png"
      },
      "VFS": {
        "scandir": {
          "showHiddenFiles": false
        }
      }
    },
    "BugReporting": {
      "url": "//github.com/os-js/RxOS-UI2/issues/new?title=%TITLE%&body=%BODY%",
      "options": {
        "message": "This bugreport was generated by RxOS"
      }
    },
    "Watermark": {
      "lines": [
        "RxOS 4.0 (C) 2016 Outernet Inc, based on OS.js"
      ]
    },
    "VFS": {
      "Mountpoints": {
        "desktop": {
          "enabled": true,
          "visible": false,
          "options": {
            "alias": "downloads://",
            "path": "downloads://"
          }
        },
        "shared": {
          "enabled": false
        },
        "downloads": {
          "enabled": true,
          "description": "Downloads",
          "icon": "devices/harddrive.png"
        },
        "home": {
          "enabled": true,
          "visible": true
        },
        "osjs": {
          "description": "RxOS",
          "visible": false
        },
        "applications": {
          "visible": false
        }
      }
    }
  },
  "handler": "shadow"
}